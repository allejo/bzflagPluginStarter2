---
---

{
    {% for event in site.events %}
        {% capture eventName %}{{ event.path | replace: '_events/', '' | replace: '.md', '' }}{% endcapture %}
        "{{ eventName }}": {
            "name": "{{ eventName }}",
            "dataType": "{{ event.dataType}}",
            "description": "{{ event.content | strip_newlines | strip_html }}",
            "variable": "data",
            "parameters": {{ event.parameters | jsonify }}
        }{% unless forloop.last %},{% endunless %}
    {% endfor %}
}